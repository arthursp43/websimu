{% extends 'base.html.twig' %}

{% block body %}

   <div class="row">
       <div class="col-4">
           <ul class="list-group" style="width: 175px;">
               <li class="list-group-item"><form action="{{ path('inicio') }}" method="post">
                       <input type="hidden" id="login" name="login" value="{{ usuario.idlogin.login }}">
                       <input type="hidden" id="senha" name="senha" value="{{ usuario.idlogin.senha }}">
                       <button style="width: 136px;"type="submit" class="btn btn-primary">Inicio</button></form></li>
               <li class="list-group-item"><form action="{{ path('minha_conta') }}" method="post">
                       <input type="hidden" id="login" name="login" value="{{ usuario.idlogin.login }}">
                       <input type="hidden" id="senha" name="senha" value="{{ usuario.idlogin.senha }}">
                       <button style="width: 136px;"type="submit" class="btn btn-primary">Minha Conta</button></form></li>
               <li class="list-group-item active"><form action="{{ path('recarga_inicio') }}" method="post">
                       <input type="hidden" id="login" name="login" value="{{ usuario.idlogin.login }}">
                       <input type="hidden" id="senha" name="senha" value="{{ usuario.idlogin.senha }}">
                       <button style="width: 136px;"type="submit" class="btn btn-primary">Efetuar Recarga</button></form></li>
               <li class="list-group-item"><form action="{{ path('configuracao_inicio') }}" method="post">
                       <input type="hidden" id="login" name="login" value="{{ usuario.idlogin.login }}">
                       <input type="hidden" id="senha" name="senha" value="{{ usuario.idlogin.senha }}">
                       <button style="width: 136px;"type="submit" class="btn btn-primary">Configuração</button></form></li>
           </ul>
       </div>
       <div class="col-4" style="
    padding-top: 200px;
">
           <form>
               <input type="hidden" name="idpedido" id="idpedido" value="{{ pedido.idpedido }}">
               <div class="form-group">
                   <label for="exampleInputEmail1">Opção Pagamento:</label>
                   <select class="form-control" id="opcao" name="opcao">
                       <option>Selecione</option>
                       <option value="1">Cartão de Crédito</option>
                       <option value="2">Boleto Bancário</option>
                   </select>
               </div>
               <div id="cartao" name="cartao" style="display: none;">
               <div class="form-group">
                   <label for="exampleInputPassword1">Bandeira:</label>
                   <div class="row">
                       <div class="col-6"><select class="form-control">
                               <option>Escolha a Bandeira de seu Cartão</option>
                               <option value="1">Visa</option>
                               <option value="2">Mastercard</option>
                               <option value="2">America Express</option>
                           </select>
                       </div>
                   </div>
               </div>
               <div class="form-group">
                   <label for="exampleInputPassword1">Número cartão:</label>
                   <div class="row">
                       <div class="col-3"><input type="text" class="form-control" maxlength="4" id="box1" name="box1"></div>
                       <div class="col-3"><input type="text" class="form-control" maxlength="4" id="box2" name="box2"></div>
                       <div class="col-3"><input type="text" class="form-control" maxlength="4" id="box3" name="box3"></div>
                       <div class="col-3"><input type="text" class="form-control" maxlength="4" id="box4" name="box4"></div>
                   </div>
               </div>
               <div class="form-group">

                   <div class="row">
                       <div class="col-6"><label for="exampleInputPassword1">CVV</label><input type="text" class="form-control" maxlength="3"></div>
                       <div class="col-6"><label for="exampleInputPassword1">Validade:</label><input type="date" class="form-control"></div>
                   </div>

               </div>
                   <div class="form-group">

                       <div class="row">
                           <div class="col-6"><label for="exampleInputPassword1">Valor</label><input type="text" class="form-control" value="{{ valor }}" disabled></div>
                           <div class="col-6"><label for="exampleInputPassword1">Parcelas:</label>
                           <select class="form-control">
                               <option>1x{{ valor }},00</option>
                           </select>
                           </div>
                       </div>


                   </div>
                   <div class="form-group">
                       <button type="button" class="btn btn-primary" id="checkout" name="checkout">Checkout!</button>
                   </div>
               </div>
               <div id="boleto" name="boleto" style="display: none;">

               </div>

           </form>
       </div>
       <div class="col-4"></div>

   </div>


{% endblock %}


{% block javascripts %}

    {% javascripts
        '@UsuarioBundle/Resources/public/js/Pagamento/pagamentoCartao.js'
        '@UsuarioBundle/Resources/public/js/bootbox.min.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>

    {% endjavascripts %}
{% endblock %}