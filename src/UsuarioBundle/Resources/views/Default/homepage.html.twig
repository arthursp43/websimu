{% extends 'base.html.twig' %}

{% block body %}

    <table>

        <tr>
            <td style="vertical-align: top;">
                <ul class="list-group">
                    <li class="list-group-item active"><a href="" style="color: #FFFFFF">Minha Conta</a></li>
                    <li class="list-group-item"><a href="">Efetuar Recarga</a></li>
                    <li class="list-group-item"><a href="">Configurações</a></li>
                </ul>
            </td>
            <td style="vertical-align: top;">
                <div class="card">
                    <h5 class="card-header" style="height: 63px;">Minhas Informações</h5>
                    <div class="card-body">
                        <h5 class="card-title">Nome: {{ usuario.nome }} {{usuario.sobrenome}}</h5>
                        <p class="card-text">Data Nascimento: {{ usuario.dtnascimento }}</p>
                        <p class="card-text">Sexo: {{ usuario.sexo }}</p>
                        <p class="card-text">CPF: {{ usuario.cpf }}</p>
                        <p class="card-text">CEP: {{ usuario.cep.cep }}</p>
                        <p class="card-text">Celular: {{ usuario.celular }} Telefone: {{ usuario.telefone }} </p>
                        <a href="#" class="btn btn-primary">Editar Informações</a>
                    </div>
                </div>

            </td>

            <td style="vertical-align: top;">
                <div class="card">
                    <h5 class="card-header">Meus Cartões<a style="margin-left: 95px;" href="#" class="btn btn-primary">Novo Cartão</a></h5>
                    {% for cartao in cartoes %}
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Cartão: {{ cartao.numeroCartao }}</h4>
                            <h5 class="card-title">Titular: {{ cartao.idusuario.nome }}</h5>
                            <p class="card-text">Validade: {{ cartao.validade }}</p>
                            <p class="card-text">Status: {{ cartao.status }}</p>
                            <p class="card-text"><a href="">Ver Saldo</a></p>

                        </div>
                    </div>
                    {% endfor %}
                    
                </div>
            </td>
        </tr>
    </table>


    {% javascripts %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}



{% endblock %}