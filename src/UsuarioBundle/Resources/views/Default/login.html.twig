{% extends 'base.html.twig' %}

{% block body %}
    <br><br>
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
                <form id="form-login" name="form-login" action="{{ path('efetuar_login') }}" method="POST" >
                <div class="form-group">
                    <label for="exampleInputEmail1">Login</label>
                    <input type="text" class="form-control" id="login" aria-describedby="emailHelp" placeholder="Login de Usuario">

                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Senha</label>
                    <input type="password" class="form-control" id="senha" placeholder="Senha">
                </div>
                <button type="submit" id="btn-login2" name="btn-salvar2" class="btn btn-primary btn-lg" role="button">Login</button>
                <button type="button" id="btn-registrar" name="btn-salvar" class="btn btn-primary btn-lg" role="button">Quero Me Registrar!</button>

                </form>
        </div>
        <div class="col-sm-4"></div>
    </div>

{% endblock %}

{% block javascripts %}
    {% javascripts
        '@UsuarioBundle/Resources/public/js/Login/efetuarLogin.js'
        '@UsuarioBundle/Resources/public/js/bootbox.min.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>

    {% endjavascripts %}
{% endblock %}